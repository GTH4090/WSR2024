<Page x:Class="WSR2024.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR2024.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="RegBtn" Content="Регистрация" Click="RegBtn_Click"/>
            <Button x:Name="ScanBtn" Content="Сканировать QR" Click="ScanBtn_Click"/>
            <Button x:Name="HospBtn" Content="Госпитализация" Click="HospBtn_Click"/>
            
        </StackPanel>
    </Grid>
</Page>
